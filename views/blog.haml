  %body
  
    .sideBar
      %img#logo{ src: "/system/KDT.png", alt: "Kunstformen der Technologie" }
      %br
      %a{ href: "/home" } Home
      %br
      %a{ href: "/about" } About
      %br
      %a{ href: "/tag/code" } Code
      %br
      %a{ href: "/tag/photos" } Photos
      %br
      %a{ href: "/tag/essays" } Essays
      %br
      %a{ href: "/tag/art" } Art
      %br
  
    .content
      = content
      - if not more_link.nil?
        %a.more_link{ href: "#{more_link}" } More
