%html

  %head
    %title KDT
    %meta{ charset: "UTF-8" }
    %link{ rel: "stylesheet", href: "/system/highlight/styles/solarized_dark.css" }
    %link{ rel: "icon", href: "/system/favicon.ico" }
    %script{ src: "/system/highlight/highlight.pack.js" }
    %script hljs.initHighlightingOnLoad();
    %script{ src: "/system/processing/processing.min.js" }
    %script var ADAPT_CONFIG = {path: '/system/css/', dynamic: false, range: ['0px to 1300px = style_small.css','1300px = style.css']};
